<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:monkey="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#237EAD"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.monkey.miclockview.MiClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        monkey:backgroundColor="#6c49d2"
        monkey:darkColor="#80ffffff"
        monkey:lightColor="#ffffff"
        monkey:textSize="14sp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
        <com.monkey.miclockview.MiClockView
            android:layout_width="100dp"
            android:layout_height="100dp"
            monkey:backgroundColor="#6c49d2"
            monkey:darkColor="#80ffffff"
            monkey:lightColor="#ffffff"
            monkey:textSize="7sp"
            />
        <com.monkey.miclockview.MiClockView
            android:layout_width="100dp"
            android:layout_height="100dp"
            monkey:backgroundColor="#6c49d2"
            monkey:darkColor="#80ffffff"
            monkey:lightColor="#ffffff"
            monkey:textSize="7sp"

            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.monkey.miclockview.MiClockView
                android:layout_width="100dp"
                android:layout_height="100dp"
                monkey:backgroundColor="#6c49d2"
                monkey:darkColor="#80ffffff"
                monkey:lightColor="#ffffff"
                monkey:textSize="7sp"

                />
            <com.monkey.miclockview.MiClockView
                android:layout_width="100dp"
                android:layout_height="100dp"
                monkey:backgroundColor="#6c49d2"
                monkey:darkColor="#80ffffff"
                monkey:lightColor="#ffffff"
                monkey:textSize="7sp"

                />
            <com.monkey.miclockview.MiClockView
                android:layout_width="100dp"
                android:layout_height="100dp"
                monkey:backgroundColor="#6c49d2"
                monkey:darkColor="#80ffffff"
                monkey:lightColor="#ffffff"
                monkey:textSize="7sp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <com.monkey.miclockview.TimeView
                android:id="@+id/tv_time_show"
                android:background="#6c49d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
