<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubtechinc.cruzr.calendar">
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />
    <application
        android:name=".CalendarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CalendarActivity" android:screenOrientation="landscape" android:theme="@style/Theme.AppStartLoad">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DialogActivity" android:screenOrientation="landscape" android:theme="@style/MyDialogStyle" >
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <service android:name=".service.ServiceProxy"  android:exported="false"/>
        <service
            android:name="com.ubtechinc.cruzr.sdk.speech.SpeechService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.calendar.Cruiser_Service"/>
            </intent-filter>
        </service>
        <receiver android:name=".receiver.WakeupReceiver">
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.ACTION.WAKE_UP"/>
            </intent-filter>
        </receiver>
        <meta-data android:name="cruiser_appid" android:value="19"/>

        <meta-data android:name="cruiser_call" android:value="@string/local_cmd"/>
        <meta-data android:name="cruiser_call_en" android:value="@string/local_cmd_en"/>

    </application>

</manifest>